{
    "name": "ashokdubariya/module-testimonial",
    "description": "Magento 2 Testimonial Module with GraphQL API support and Hyvä Theme compatibility for managing customer testimonials with complete CRUD operations, admin panel, and frontend display.",
    "type": "magento2-module",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Ashokkumar Dubariya",
            "email": "ashokdubaria@gmail.com"
        }
    ],
    "keywords": [
        "magento2",
        "testimonial",
        "graphql",
        "customer-reviews",
        "testimonials",
        "magento2-module",
        "ratings",
        "hyva-theme"
    ],
    "require": {
        "php": "^8.1",
        "magento/framework": "^103.0",
        "magento/module-backend": "^102.0",
        "magento/module-ui": "^101.2"
    },
    "suggest": {
        "hyva-themes/magento2-default-theme": "Required for Hyvä theme compatibility (^1.1)"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Ashokdubariya\\Testimonial\\": ""
        }
    },
    "support": {
        "issues": "https://github.com/ashokdubariya/magento2-testimonial-graphql/issues",
        "source": "https://github.com/ashokdubariya/magento2-testimonial-graphql"
    }
}
