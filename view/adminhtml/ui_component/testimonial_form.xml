<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">testimonial_form.testimonial_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Testimonial Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Ashok\Testimonial\Block\Adminhtml\Testimonial\Edit\BackButton"/>
            <button name="delete" class="Ashok\Testimonial\Block\Adminhtml\Testimonial\Edit\DeleteButton"/>
            <button name="save" class="Ashok\Testimonial\Block\Adminhtml\Testimonial\Edit\SaveButton"/>
            <button name="save_and_continue" class="Ashok\Testimonial\Block\Adminhtml\Testimonial\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>testimonial_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>testimonial_form.testimonial_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="testimonial_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="testimonial/testimonial/save"/>
        </settings>
        <dataProvider class="Ashok\Testimonial\Model\Testimonial\DataProvider" name="testimonial_form_data_source">
            <settings>
                <requestFieldName>testimonial_id</requestFieldName>
                <primaryFieldName>testimonial_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="testimonial_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>testimonial_id</dataScope>
            </settings>
        </field>
        <field name="customer_name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Customer Name</label>
                <dataScope>customer_name</dataScope>
            </settings>
        </field>
        <field name="customer_email" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-email" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Customer Email</label>
                <dataScope>customer_email</dataScope>
            </settings>
        </field>
        <field name="message" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Message</label>
                <dataScope>message</dataScope>
            </settings>
        </field>
        <field name="rating" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Rating</label>
                <dataScope>rating</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Ashok\Testimonial\Model\Source\Rating"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="status" sortOrder="50" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Ashok\Testimonial\Model\Source\Status"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
